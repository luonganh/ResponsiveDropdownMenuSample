<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResponsiveDropdownMenuSample</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <header>
        <section class="nav-bar">
            <div class="nav-container">
                <div class="brand">
                    <a href="/">
                        &nbsp;
                        <img id="logo" src="~/images/logo.png" />
                    </a>
                </div>
                <nav class="main-menu">
                    <div class="nav-mobile">
                        <a id="nav-toggle" href="#!"><span></span></a>
                    </div>
                    <ul>
                        <li>
                            <a href="#">Xổ số hôm nay</a>
                            <ul class="nav-dropdown">
                                <li><a href="/xo-so-mien-bac">Xổ số miền Bắc</a></li>
                                <li><a href="/xo-so-mien-trung">Xổ số miền Trung</a></li>
                                <li><a href="/xo-so-mien-nam">Xổ số miền Nam</a></li>
                            </ul>
                        </li>

                        <li>
                            <a href="#">Miền Bắc</a>
                            <ul class="nav-dropdown">
                                <li><a href="/xo-so-truyen-thong">Truyền Thống</a></li>
                                <li><a href="/xo-so-dien-toan-123">Điện Toán 123</a></li>
                                <li><a href="/xo-so-dien-toan-6x36">Điện Toán 6x36</a></li>
                                <li><a href="/xo-so-than-tai">Thần Tài</a></li>
                            </ul>
                        </li>                                                                                  
                    </ul>
                </nav>
            </div>
        </section>
    </header>    
    <main role="main" class="pb-3">
            @RenderBody()
    </main>       
    <script src="~/js/jquery-2.1.3.min.js" asp-append-version="true"></script>    
    <script src="~/js/main_menu.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
